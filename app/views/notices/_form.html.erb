<%= form_for notice, remote: true do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :details %>
  <%= f.text_field :details %>
  
  <%= f.hidden_field :category %>

  <%= f.label :checkpoint_id %>
  <%= f.collection_select(:checkpoint_id, Checkpoint.all, :id, :name)%>

  <%= f.submit %>
<% end %>